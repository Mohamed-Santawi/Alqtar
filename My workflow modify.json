    },
    {
      "parameters": {
        "mode": "runOnceForEachItem",
        "jsCode": "// Firebase API response\nconst balance = $json.balance;\n\n// Data from Calculate Cost node\nconst research = $node[\"Calculate Cost\"].json;\nconst cost = research.billing.finalCostSAR;\n\nif (balance < cost) {\n  throw new Error(\n    `Insufficient balance: ${balance} SAR < ${cost.toFixed(3)} SAR`\n  );\n}\n\nreturn {\n  ...research,\n  balance\n};\n\n"
      },
