      ],
      "id": "00efe318-8f60-4d96-ab77-9b9f0b3f7f3a",
      "name": "HTTP Request"
    },
    {
      "parameters": {
        "mode": "runOnceForEachItem",
        "jsCode": "const prompt = $input.item.json.prompt;\n\nreturn {\n  json: {\n    requestBody: JSON.stringify({\n      model: \"openai/gpt-5-nano-2025-08-07\",\n      messages: [{\n        role: \"user\",\n        content: prompt\n      }],\n      temperature: 0.7,\n      max_tokens: 8000  // ← Changed from 2000 to 8000!\n    })\n  }\n};"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1632,
        0
      ],
      "id": "a1e0df13-7c74-4fab-a404-85358eb7eb43",
      "name": "Prepare Request Body"
    },
    {
      "parameters": {
        "mode": "runOnceForEachItem",
        "jsCode": "return {\n  success: true,\n  data: {\n    text: $json.text,\n    billing: $json.billing\n  },\n  balance: {\n    before: $json.balance,\n    after: $json.balance - $json.billing.finalCostSAR,\n    currency: \"SAR\"\n  },\n  meta: {\n    generatedAt: new Date().toISOString(),\n    model: \"gpt-4.1-nano\",\n    language: \"ar\",\n    tokensUsed: $json.billing.totalTokens\n  }\n};\n\n"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
